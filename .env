# .env - Configurações para desenvolvimento local

# Debug ativado para desenvolvimento (mostra erros detalhados)
DEBUG=True

# Chave secreta do Django (só para desenvolvimento)
SECRET_KEY=django-insecure-desenvolvimento-local-2025

# Banco de dados local (SQLite - mais simples para começar)
DATABASE_URL=sqlite:///db.sqlite3

# Configurações de email (para testes locais)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend